<%- model_class = Reservation -%>
<% if !@reservations.blank? %>

  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>

  <table class="table table-striped">

    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:reservation_date) %></th>
        <th><%= model_class.human_attribute_name(:bus_id) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
      </tr>
    </thead>
    <!-- -------------------- Reservatoions -------------------- -->
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.reservation_date.to_date %></td>
          <td><%= reservation.bus_id %></td>
          <td><%= reservation.bus_owner_id %></td>
          <td><%=l reservation.created_at.to_date %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

<% else %>
  <h1> We have no Reservations </h1>
<% end %>

<%= link_to 'Back', buses_path, :class => 'btn btn-default' %>