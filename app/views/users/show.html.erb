<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>

  <% if !@user_reservations.blank? %>
    <h3>Reservations</h3>
    <% @user_reservations.each do |reservation| %>
      <li>
        <a href="/buses/<%= reservation.bus.id %>"><%= reservation.bus.name %> </a> : <%=reservation.seat %> Seats
      </li>
    <% end %>
  <% end %>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
              buses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
               profile_edit_path, :class => 'btn btn-default' %>
<%= link_to "Deactivate My Account", registration_path(@user), :class => 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>