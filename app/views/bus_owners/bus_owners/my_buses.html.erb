<%= link_to t('.back', :default => t("helpers.links.back")),
                root_path, :class => 'btn btn-xs btn-default'  %>
<%= link_to 'Profile',
                bus_owners_profile_path, :class => 'btn btn-xs btn-default'  %>
<%= link_to 'Buses',
                bus_owners_buses_path, :class => 'btn btn-xs btn-default'  %>
<%= link_to 'Reservations',
                 bus_owners_reservations_path, :class => 'btn btn-xs btn-default'  %>
<!-- -------------------- Bus Owner Buses -------------------- -->
<% if !@my_buses.blank? %>
  <h3>My Buses</h3>
  <div class="row">
    <% @my_buses.each do |bus| %>
    <div class="col-md-4 my-buses-show clickable-row" data-href="/buses/<%=bus.id%>">
      Bus Name : <%= bus.name %> <br>
      Route : <%= bus.source %> - <%= bus.destination %> <br><br>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_bus_owners_bus_path(bus), :class => 'btn btn-xs btn-default' %>
      <%= link_to 'Bus Reservations',
                   bus_owners_bus_reservations_path(bus), :class => 'btn btn-xs btn-default' %>
      <%= link_to "Remove bus",
                     bus_owners_bus_path(bus),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
    </div>
  <% end %>
</div>
<% end %>