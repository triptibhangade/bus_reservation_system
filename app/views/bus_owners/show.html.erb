<%- model_class = BusOwner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<!-- -------------------- Eroors -------------------- -->
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bus_owner.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @bus_owner.email %></dd>
</dl>
<div>
  <h3>My Buses</h3>
  <% @my_buses.each do |bus| %>
      <li>
        <a href="buses/<%=bus.id%>"><%= bus.name %></a> : <%= bus.source %> - <%= bus.destination %>
        <%= link_to "Remove buses",
                  bus_path(bus),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-xs btn-danger' %>
      </li>
  <% end %>
</div>
<!-- -------------------- Bus Owner Reservation -------------------- -->
<% if !@bus_owner.reservations.blank?%>
    <h3>Reservations</h3>
    <% @bus_owner.reservations.each do |reservation| %>
      <li>
        <a href="/buses/<%= reservation.bus.id %>"><%= reservation.bus.name %> </a> : <%=reservation.seat %> Seats
        
            <%= link_to 'Cancel Reservation',
                      bus_reservation_path(reservation.bus_id, reservation.bus_owner_id),
                      :method => :delete, 
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
      </li>
    <% end %>
<%end%>
&nbsp
<!-- -------------------- Buttons -------------------- -->
<div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                buses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                 profile_edit_path, :class => 'btn btn-default' %>
  <%= link_to "Deactivate My Account", registration_path(@bus_owner), :class => 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>
</div>