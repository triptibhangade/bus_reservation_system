<%- model_class = Bus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bus.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_no) %>:</strong></dt>
  <dd><%= @bus.registration_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_no_of_seats) %>:</strong></dt>
  <dd><%= @bus.total_no_of_seats %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bus_owner_id) %>:</strong></dt>
  <dd><%= @bus.bus_owner_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              buses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bus_path(@bus), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bus_path(@bus),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
