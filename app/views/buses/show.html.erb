<%- model_class = Bus -%>
<div class="page-header">
 <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bus.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:route) %>:</strong></dt>
  <dd><%= @bus.source %> - <%= @bus.destination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:available_seats) %>:</strong></dt>
  <dd><%= seat_count(@bus) %> seats</dd>
  <dt><strong><%= model_class.human_attribute_name(:total_no_of_seats) %>:</strong></dt>
  <dd><%= @bus.total_no_of_seats %> seats </dd>
  <dt><strong><%= model_class.human_attribute_name(:bus_owner_id) %>:</strong></dt>
  <dd><%= @bus.bus_owner.name %></dd>
  
  <% if !@bus.reservations.blank? %>
    <h3>Reservations<h3>
      <% @bus.reservations.each do |reservation| %>
        <li>
          <% if current_bus_owner %>
            <%= reservation.bus_owner_id %> : <%= reservation.seat %> seats
            
                <%= link_to 'Cancel Reservation',
                    bus_reservation_path(reservation.bus_owner_id),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
            <% else %>
              <%= reservation.user_id %> : <%= reservation.seat %> seats
              
                  <%= link_to 'Cancel Reservation',
                      bus_reservation_path(reservation.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
            <% end %>

        </li>
      <% end %>
  <% end %>
</dl>
<div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                buses_path, :class => 'btn btn-default'  %>
  <% if current_bus_owner.present? %>
    <% if current_bus_owner.id == @bus.bus_owner_id %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_bus_path, :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  bus_path,
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    <% end %>
  <% end %>
</div>