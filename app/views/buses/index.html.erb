<%- model_class = Bus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>
        <%= model_class.human_attribute_name(:source) %> 
          to
        <%= model_class.human_attribute_name(:destination)%>
      </th>
      <th><%= model_class.human_attribute_name(:total_no_of_seats) %></th>
      <th><%= model_class.human_attribute_name(:available_seats) %></th>
      <% if current_user %>
        <th><%= model_class.human_attribute_name(:registration) %></th>
      <% end %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.name %></td>
        <td><%= bus.source %> - <%= bus.destination %></td>
        <td><%= bus.total_no_of_seats %></td>
        <td><%= seat_count(bus) %></td>
        <% if current_user %>
          <td> <%= link_to 'Reserve your seat',new_bus_reservation_path(bus),
                               :class => 'btn btn-default btn-xs' %></td>
        <% end %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      bus_path(bus), :class => 'btn btn-default btn-xs' %>
          <% if current_bus_owner %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_bus_path(bus), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        bus_path(bus),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_bus_owner %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_bus_path,
              :class => 'btn btn-primary' %>
<% end %>
