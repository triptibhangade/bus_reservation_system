<%- model_class = Bus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:registration_no) %></th>
      <th><%= model_class.human_attribute_name(:total_no_of_seats) %></th>
      <th><%= model_class.human_attribute_name(:bus_owner_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= link_to bus.id, bus_path(bus) %></td>
        <td><%= bus.name %></td>
        <td><%= bus.registration_no %></td>
        <td><%= bus.total_no_of_seats %></td>
        <td><%= bus.bus_owner_id %></td>
        <td><%=l bus.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      bus_path(bus), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bus_path(bus), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bus_path(bus),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bus_path,
            :class => 'btn btn-primary' %>
