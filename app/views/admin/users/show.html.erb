<%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn btn-xs btn-default'  %>
<%= link_to 'Profile',
              admin_profile_path, :class => 'btn btn-xs btn-default'  %>
<%= link_to 'Reservations',
              admin_my_reservations_path, :class => 'btn btn-xs btn-default'  %>
<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<!-- ----------------- Admin Details/Profile Page----------------- -->
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>
<!-- -------------------- Buttons -------------------- -->
<%= link_to t('.edit', :default => t("helpers.links.edit")),
               profile_edit_path, :class => 'btn btn-xs btn-default' %>
<%= link_to "Deactivate My Account", registration_path(@user), :class => 'btn btn-xs btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>
<hr>
